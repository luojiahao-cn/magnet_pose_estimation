<launch>
    <arg name="serial_port" default="/dev/ttyUSB0" />
    <arg name="baud_rate" default="921600" />

    <node pkg="mag_sensor_node" type="mag_sensor_node" name="mag_sensor_node" output="screen">
        <rosparam command="load" file="$(find mag_sensor_node)/config/array.yaml" />
        <rosparam command="load" file="$(find mag_sensor_node)/config/hardware.yaml" />

        <param name="driver/serial_port" value="$(arg serial_port)" />
        <param name="driver/baud_rate" value="$(arg baud_rate)" />
    </node>
</launch>
