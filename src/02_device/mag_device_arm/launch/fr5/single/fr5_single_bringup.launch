<?xml version="1.0"?>
<launch>
  <!-- Arm ID: arm1 or arm2 -->
  <arg name="arm_id" default="arm1" doc="Arm ID (arm1 or arm2)"/>
  
  <!-- Robot IP address -->
  <arg name="robot_ip" default="" doc="IP address of the robot (if empty, uses default based on arm_id)"/>
  
  <!-- Control loop frequency -->
  <arg name="loop_hz" default="60.0" doc="Control loop frequency (Hz)"/>
  
  <!-- Tool parameter (optional) -->
  <arg name="tool_name" default="bracket" doc="Tool name to use"/>
  
  <!-- MoveIt options -->
  <arg name="pipeline" default="ompl" doc="Planning pipeline to use with MoveIt"/>
  <arg name="use_rviz" default="true" doc="Start RViz"/>
  <arg name="debug" default="false" doc="Debug mode"/>
  
  <!-- Layout configuration -->
  <arg name="layout_config" default="$(find zlab_robots_bringup)/config/robot_layout.yaml" doc="Path to robot layout configuration YAML"/>

  <!-- Position parameters (optional, overrides layout_config) -->
  <arg name="xyz" default="0 0 0" doc="Position of robot (x y z)"/>
  <arg name="rpy" default="0 0 0" doc="Orientation of robot (roll pitch yaw)"/>

  <!-- 配置参数 -->
  <arg name="config" default="$(find mag_device_arm)/config/single_arm.yaml" />
  
  <!-- 是否启动 mag_device_arm 节点 -->
  <arg name="start_arm_node" default="true" doc="Whether to start mag_device_arm node"/>

  <!-- Launch hardware interface and MoveIt -->
  <include file="$(find zlab_robots_bringup)/launch/fr5/single/fr5_single_bringup.launch">
    <arg name="arm_id" value="$(arg arm_id)"/>
    <arg name="robot_ip" value="$(arg robot_ip)"/>
    <arg name="loop_hz" value="$(arg loop_hz)"/>
    <arg name="tool_name" value="$(arg tool_name)"/>
    <arg name="layout_config" value="$(arg layout_config)"/>
    <arg name="xyz" value="$(arg xyz)"/>
    <arg name="rpy" value="$(arg rpy)"/>
    <arg name="pipeline" value="$(arg pipeline)"/>
    <arg name="use_rviz" value="$(arg use_rviz)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- Launch mag_device_arm node -->
  <group if="$(arg start_arm_node)">
    <node pkg="mag_device_arm" type="arm_node" name="mag_device_arm" output="screen">
      <rosparam command="load" file="$(arg config)" />
    </node>
  </group>
</launch>

