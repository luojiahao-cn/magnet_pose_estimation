<?xml version="1.0"?>
<launch>
  <!-- Arm ID parameter -->
  <arg name="arm_id" default="arm1" doc="Arm ID to use"/>

  <!-- Tool parameter (optional, defaults to none) -->
  <arg name="tool_name" default="magnetic_sensor_bracket" doc="Tool name to use"/>

  <!-- specify the planning pipeline -->
  <arg name="pipeline" default="ompl" />

  <!-- By default, we do not start a database -->
  <arg name="db" default="false" />
  
  <!-- By default, we are not in debug mode -->
  <arg name="debug" default="false" />

  <!-- By default, we will load or override the robot_description -->
  <arg name="load_robot_description" default="true"/>

  <!-- MoveIt options -->
  <arg name="use_gui" default="false" />
  <arg name="use_rviz" default="true" />

  <!-- 配置参数 -->
  <arg name="config" default="$(find mag_device_arm)/config/single_arm.yaml" />
  
  <!-- 是否启动 mag_device_arm 节点 -->
  <arg name="start_arm_node" default="true" doc="Whether to start mag_device_arm node"/>

  <!-- Launch MoveIt in fake execution mode -->
  <include file="$(find zlab_robots_bringup)/launch/fr5/single/fr5_single_moveit.launch">
    <arg name="arm_id" value="$(arg arm_id)"/>
    <arg name="tool_name" value="$(arg tool_name)"/>
    <arg name="load_robot_description" value="$(arg load_robot_description)"/>
    <arg name="pipeline" value="$(arg pipeline)"/>
    <arg name="use_gui" value="$(arg use_gui)"/>
    <arg name="use_rviz" value="$(arg use_rviz)"/>
    <arg name="db" value="$(arg db)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- Launch mag_device_arm node -->
  <group if="$(arg start_arm_node)">
    <node pkg="mag_device_arm" type="arm_node" name="mag_device_arm" output="screen">
      <rosparam command="load" file="$(arg config)" />
    </node>
  </group>
</launch>

