<?xml version="1.0"?>
<launch>
  <!-- Arm ID parameter -->
  <arg name="arm_id" default="arm1" doc="Arm ID to use"/>
  
  <!-- Tool parameter (optional, defaults to none) -->
  <arg name="tool_name" default="magnetic_sensor_bracket" doc="Tool name to use (e.g., permanent_magnet, magnetic_sensor_bracket, electronic_magnet)"/>
  
  <!-- MoveIt options -->
  <arg name="pipeline" default="ompl" doc="Planning pipeline to use with MoveIt"/>
  <arg name="use_rviz" default="true" doc="Use Rviz to visualize the robot"/>

  <!-- Gazebo options -->
  <arg name="gazebo_gui" default="true" doc="Start Gazebo GUI"/>
  <arg name="paused" default="false" doc="Start Gazebo paused"/>
  <arg name="world_name" default="worlds/empty.world" doc="Gazebo world file"/>
  <arg name="world_pose" default="-x 0 -y 0 -z 0 -R 0 -P 0 -Y 0" doc="Pose to spawn the robot at"/>
  
  <!-- 配置参数 -->
  <arg name="config" default="$(find mag_device_arm)/config/single_arm.yaml" />
  
  <!-- 是否启动 mag_device_arm 节点 -->
  <arg name="start_arm_node" default="true" doc="Whether to start mag_device_arm node"/>
  
  <!-- Launch Gazebo and MoveIt -->
  <include file="$(find zlab_robots_bringup)/launch/fr5/single/fr5_single_gazebo.launch" pass_all_args="true"/>
  
  <!-- Launch mag_device_arm node -->
  <group if="$(arg start_arm_node)">
    <node pkg="mag_device_arm" type="arm_node" name="mag_device_arm" output="screen">
      <rosparam command="load" file="$(arg config)" />
    </node>
  </group>
</launch>

