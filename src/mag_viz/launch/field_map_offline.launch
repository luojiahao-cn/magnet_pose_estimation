<launch>
  <!-- 离线 CSV 可视化：读取扫描完成后的 CSV 并一次性发布 MarkerArray -->
  <node pkg="mag_viz" type="field_map_csv_viz_node" name="field_map_csv_viz" output="screen">
    <rosparam file="$(find mag_viz)/config/field_map_csv_viz.yaml" command="load"/>
  </node>

  <!-- 启动 RViz 进行可视化 -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find mag_viz)/rviz/field_map_offline.rviz" output="screen"/>
</launch>
